# ==========================================
#  Telegram Bot 环境配置模板
#  复制此文件为 .env 并填写实际值
# ==========================================

# ==========================================
#  必填配置
# ==========================================

# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 数据库密码 (请设置强密码)
DATABASE_PASSWORD=your_secure_password_here

# ==========================================
#  数据库配置 (可选，有默认值)
# ==========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=telegram_group_management
DATABASE_USER=postgres

# ==========================================
#  全局白名单 (可选)
# ==========================================
# 逗号分隔的用户ID，这些用户不受限制
GLOBAL_WHITELIST=

# ==========================================
#  User Bot 配置 (可选，用于补充 Bot API 功能)
#  需要先运行 userbot_login.py 脚本登录
# ==========================================
USERBOT_ENABLED=false
USERBOT_API_ID=0
USERBOT_API_HASH=
USERBOT_SESSION_NAME=userbot

# ==========================================
#  AI 配置 (可选，用于用户画像分析)
#  支持 OpenAI 兼容接口
# ==========================================
AI_ENABLED=false
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=your_openai_api_key
AI_MODEL_ID=gpt-4

# ==========================================
#  LLM 配置 (可选，用于消息总结)
#  支持 OpenAI 兼容接口
# ==========================================
LLM_ENABLED=false
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_openai_api_key
LLM_MODEL=gpt-4o-mini

# ==========================================
#  每日总结配置 (可选)
# ==========================================
DAILY_SUMMARY_ENABLED=false
DAILY_SUMMARY_TIME=09:00
DAILY_SUMMARY_TIMEZONE=Asia/Shanghai

# ==========================================
#  积分系统配置 (可选)
# ==========================================
POINTS_ENABLED=true

